// This is your Prisma schema file

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
  name     String
  email    String @unique
  role     String
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  price       Float
  brand       String
  stock       Int
  expiredDate String
  imageUrl    String   // Assuming imageUrl is the local path to the image

  // Define bidirectional relation to Transaction
  transactions  Transaction[]  @relation("ProductTransactions")
}

model Transaction {
  id             Int       @id @default(autoincrement())
  idCustomer     Int
  idProduct      Int
  quantity       Int
  price          Float
  totalPrice     Float
  transactionDate DateTime  @default(now())
  status         String

  // Define relation to Product
  product        Product   @relation(fields: [idProduct], references: [id])

  // Define bidirectional relation to Product
  @@relation("ProductTransactions", fields: [idProduct], references: [id])
}
